   <footer>
        <div class="footer-container">
            <div class="footer-left">
                <img src="{{url_for('static', filename='images/just_home_logo.png')}}" alt="JustHome Logo">
            </div>
            <div class="footer-links">
                <div class="footer-column">
                    <h4>Discover</h4>
                    
                </div>
